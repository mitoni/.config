shift + cmd - 0x2B : yabai -m window --focus south
shift + cmd - k : yabai -m window --focus north
shift + cmd - j : yabai -m window --focus west
shift + cmd - l : yabai -m window --focus east

shift + alt - 0x2B : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - j : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east

shift + ctrl - j : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + ctrl - 0x2B : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + ctrl - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + ctrl - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

shift + ctrl - m : yabai -m window --toggle zoom-fullscreen
shift + ctrl - n : yabai -m space --balance


